{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "noEmitOnError": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@workspace/utils/*": ["./src/*"]
    },
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
